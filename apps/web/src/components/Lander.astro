---
import type { Props } from '@astrojs/starlight/props';
---

<!-- Floating Nav -->
<nav class="av-nav" id="av-nav">
  <div class="av-nav-inner">
    <a href="/" class="av-nav-logo">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 120 120" fill="none" width="28" height="28">
        <defs><linearGradient id="logo-grad" x1="0" y1="0" x2="1" y2="1"><stop offset="0%" stop-color="#0e7490"/><stop offset="100%" stop-color="#065f71"/></linearGradient></defs>
        <rect width="120" height="120" rx="24" fill="url(#logo-grad)"/>
        <text x="60" y="82" text-anchor="middle" font-family="'JetBrains Mono', monospace" font-weight="bold" font-size="64" fill="white">V</text>
      </svg>
      <span>AgentV</span>
    </a>
    <div class="av-nav-links">
      <a href="/getting-started/introduction/">Docs</a>
      <a href="https://github.com/EntityProcess/agentv" target="_blank" rel="noopener noreferrer">GitHub</a>
      <button class="av-nav-pill" data-command="npm install -g agentv">
        <code>npm install -g agentv</code>
        <span class="av-copy-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="av-check-icon"><polyline points="20 6 9 17 4 12"/></svg>
        </span>
      </button>
    </div>
  </div>
</nav>

<div class="av-lander">
  <!-- Hero Section -->
  <section class="av-hero">
    <div class="av-hero-bg"></div>
    <div class="av-hero-inner">
      <div class="av-hero-text">
        <span class="av-hero-label">&gt; AI agent evaluation framework</span>
        <h1>Evaluate agents with<br/><span class="av-gradient-text">terminal precision</span></h1>
        <p class="av-hero-sub">
          No server. No signup. Multi-objective scoring from YAML specs.
          Deterministic code judges + customizable LLM judges, version-controlled in Git.
        </p>
        <div class="av-hero-cta">
          <a href="/getting-started/introduction/" class="av-btn-primary">Get Started</a>
          <a href="https://github.com/EntityProcess/agentv" class="av-btn-ghost" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            GitHub
          </a>
        </div>
      </div>
      <div class="av-hero-terminal">
        <div class="av-terminal">
          <div class="av-terminal-bar">
            <span class="av-terminal-dot av-dot-red"></span>
            <span class="av-terminal-dot av-dot-yellow"></span>
            <span class="av-terminal-dot av-dot-green"></span>
            <span class="av-terminal-title">agentv</span>
          </div>
          <div class="av-terminal-body">
            <!-- Scene 1: agentv eval -->
            <div class="av-scene av-scene-1">
              <div class="av-line av-line-cmd"><span class="av-prompt">$</span> <span class="av-typing">agentv eval ./evals/math.yaml</span></div>
              <div class="av-line av-line-out av-line-delay-1"><span class="av-dim">Running 3 eval cases...</span></div>
              <div class="av-line av-line-out av-line-delay-2"><span class="av-pass">PASS</span> addition <span class="av-dim">score: 1.0</span></div>
              <div class="av-line av-line-out av-line-delay-3"><span class="av-pass">PASS</span> multiplication <span class="av-dim">score: 1.0</span></div>
              <div class="av-line av-line-out av-line-delay-4"><span class="av-fail">FAIL</span> division <span class="av-dim">score: 0.4</span></div>
              <div class="av-line av-line-out av-line-delay-5"><span class="av-dim">Results:</span> <span class="av-pass">2 passed</span> <span class="av-fail">1 failed</span></div>
            </div>
            <!-- Scene 2: agentv compare -->
            <div class="av-scene av-scene-2">
              <div class="av-line av-line-cmd"><span class="av-prompt">$</span> <span class="av-typing">agentv compare run-a run-b</span></div>
              <div class="av-line av-line-out av-line-delay-1"><span class="av-dim">Comparing 2 runs...</span></div>
              <div class="av-line av-line-out av-line-delay-2">correctness <span class="av-pass">+12.5%</span> <span class="av-dim">(0.72 -> 0.81)</span></div>
              <div class="av-line av-line-out av-line-delay-3">latency     <span class="av-pass"> -340ms</span> <span class="av-dim">(1.2s -> 0.86s)</span></div>
              <div class="av-line av-line-out av-line-delay-4">cost        <span class="av-fail"> +$0.02</span> <span class="av-dim">($0.05 -> $0.07)</span></div>
              <div class="av-line av-line-out av-line-delay-5"><span class="av-dim">Overall:</span> <span class="av-pass">improved</span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="av-features">
    <div class="av-container">
      <h2 class="av-section-heading">Built for your workflow</h2>
      <div class="av-features-grid">
        <div class="av-feature-card av-reveal">
          <span class="av-feature-icon">&gt;_</span>
          <h3>Local Execution</h3>
          <p>No cloud dependency. All data stays on your machine. Zero overhead to get started.</p>
        </div>
        <div class="av-feature-card av-reveal">
          <span class="av-feature-icon">[~]</span>
          <h3>Multi-Objective Scoring</h3>
          <p>Correctness, latency, cost, and safety measured in a single evaluation run.</p>
        </div>
        <div class="av-feature-card av-reveal">
          <span class="av-feature-icon">{"{f}"}</span>
          <h3>Code + LLM Judges</h3>
          <p>Deterministic code validators and customizable LLM judges, composable and extensible.</p>
        </div>
        <div class="av-feature-card av-reveal">
          <span class="av-feature-icon">@&gt;</span>
          <h3>LLM & Agent Targets</h3>
          <p>Direct LLM providers plus Claude Code, Codex, Pi, Copilot, OpenCode agent targets.</p>
        </div>
        <div class="av-feature-card av-reveal">
          <span class="av-feature-icon">##</span>
          <h3>Rubric Grading</h3>
          <p>Structured criteria with weights and auto-generation. Google ADK-style object rubrics.</p>
        </div>
        <div class="av-feature-card av-reveal">
          <span class="av-feature-icon">&lt;=&gt;</span>
          <h3>A/B Comparison</h3>
          <p>Compare evaluation runs side-by-side with statistical deltas and regression detection.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Start Section -->
  <section class="av-quickstart">
    <div class="av-container">
      <h2 class="av-section-heading">Quick Start</h2>
      <div class="av-timeline">
        <div class="av-timeline-line"></div>

        <div class="av-timeline-step av-reveal">
          <span class="av-step-num">1</span>
          <div class="av-step-body">
            <h3>Install</h3>
            <div class="av-mini-terminal">
              <div class="av-mini-bar"><span class="av-mini-dots"></span></div>
              <pre><code>npm install -g agentv</code></pre>
            </div>
          </div>
        </div>

        <div class="av-timeline-step av-reveal">
          <span class="av-step-num">2</span>
          <div class="av-step-body">
            <h3>Initialize</h3>
            <div class="av-mini-terminal">
              <div class="av-mini-bar"><span class="av-mini-dots"></span></div>
              <pre><code>agentv init</code></pre>
            </div>
          </div>
        </div>

        <div class="av-timeline-step av-reveal">
          <span class="av-step-num">3</span>
          <div class="av-step-body">
            <h3>Configure</h3>
            <p>Copy <code>.env.example</code> to <code>.env</code> and add your API keys.</p>
          </div>
        </div>

        <div class="av-timeline-step av-reveal">
          <span class="av-step-num">4</span>
          <div class="av-step-body">
            <h3>Create an eval</h3>
            <div class="av-mini-terminal">
              <div class="av-mini-bar"><span class="av-mini-dots"></span></div>
              <pre><code>{`description: Math evaluation
execution:
  target: default

evalcases:
  - id: addition
    expected_outcome: Correctly calculates 15 + 27 = 42
    input_messages:
      - role: user
        content: What is 15 + 27?`}</code></pre>
            </div>
          </div>
        </div>

        <div class="av-timeline-step av-reveal">
          <span class="av-step-num">5</span>
          <div class="av-step-body">
            <h3>Run</h3>
            <div class="av-mini-terminal">
              <div class="av-mini-bar"><span class="av-mini-dots"></span></div>
              <pre><code>agentv eval ./evals/example.yaml</code></pre>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="av-comparison">
    <div class="av-container">
      <h2 class="av-section-heading">How AgentV Compares</h2>
      <div class="av-table-card av-reveal">
        <div class="av-table-scroll">
          <div class="av-table-fade"></div>
          <table>
            <thead>
              <tr>
                <th>Feature</th>
                <th class="av-col-highlight">AgentV</th>
                <th>LangWatch</th>
                <th>LangSmith</th>
                <th>LangFuse</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Setup</td>
                <td class="av-col-highlight"><code>npm install</code></td>
                <td>Cloud account + API key</td>
                <td>Cloud account + API key</td>
                <td>Cloud account + API key</td>
              </tr>
              <tr>
                <td>Server</td>
                <td class="av-col-highlight">None (local)</td>
                <td>Managed cloud</td>
                <td>Managed cloud</td>
                <td>Managed cloud</td>
              </tr>
              <tr>
                <td>Privacy</td>
                <td class="av-col-highlight">All local</td>
                <td>Cloud-hosted</td>
                <td>Cloud-hosted</td>
                <td>Cloud-hosted</td>
              </tr>
              <tr>
                <td>CLI-first</td>
                <td class="av-col-highlight"><span class="av-check-badge">&#10003;</span></td>
                <td><span class="av-cross">&#10007;</span></td>
                <td>Limited</td>
                <td>Limited</td>
              </tr>
              <tr>
                <td>CI/CD ready</td>
                <td class="av-col-highlight"><span class="av-check-badge">&#10003;</span></td>
                <td>Requires API calls</td>
                <td>Requires API calls</td>
                <td>Requires API calls</td>
              </tr>
              <tr>
                <td>Version control</td>
                <td class="av-col-highlight"><span class="av-check-badge">&#10003;</span> YAML in Git</td>
                <td><span class="av-cross">&#10007;</span></td>
                <td><span class="av-cross">&#10007;</span></td>
                <td><span class="av-cross">&#10007;</span></td>
              </tr>
              <tr>
                <td>Evaluators</td>
                <td class="av-col-highlight">Code + LLM + Custom</td>
                <td>LLM only</td>
                <td>LLM + Code</td>
                <td>LLM only</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer CTA -->
  <section class="av-footer-cta">
    <div class="av-footer-bg"></div>
    <div class="av-container av-footer-inner">
      <h2 class="av-gradient-text">Start evaluating your agents</h2>
      <p class="av-footer-sub">Open source. Local-first. MIT Licensed.</p>
      <div class="av-footer-actions">
        <a href="/getting-started/introduction/" class="av-btn-primary">Read the docs</a>
        <button class="av-footer-install" data-command="npm install -g agentv">
          <code>$ npm install -g agentv</code>
          <span class="av-copy-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="av-check-icon"><polyline points="20 6 9 17 4 12"/></svg>
          </span>
        </button>
      </div>
      <span class="av-mit-badge">MIT Licensed</span>
    </div>
  </section>
</div>

<style>
/* ============================================
   Variables & Foundations
   ============================================ */
.av-lander {
  --av-font-mono: 'JetBrains Mono', ui-monospace, 'Cascadia Code', 'Fira Code', monospace;
  --av-bg: hsl(240, 10%, 8%);
  --av-surface: hsl(240, 8%, 11%);
  --av-surface-border: hsl(240, 5%, 16%);
  --av-text: hsl(240, 5%, 90%);
  --av-text-muted: hsl(240, 5%, 55%);
  --av-indigo: #06b6d4;
  --av-indigo-dark: #0891b2;
  --av-violet: #22d3ee;
  --av-gradient: linear-gradient(135deg, #06b6d4, #22d3ee);
  --av-green: #22c55e;
  --av-red: #ef4444;
  --av-glow: 0 0 30px rgba(6, 182, 212, 0.15);
  --av-glow-strong: 0 0 60px rgba(6, 182, 212, 0.2);

  font-family: system-ui, -apple-system, sans-serif;
  color: var(--av-text);
  background: var(--av-bg);
  overflow-x: hidden;
}

.av-container {
  max-width: 72rem;
  margin: 0 auto;
  padding: 0 2rem;
}

/* ============================================
   Navigation
   ============================================ */
.av-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 0.75rem 2rem;
  background: rgba(14, 14, 20, 0.6);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-bottom: 1px solid transparent;
  transition: background 0.3s, border-color 0.3s;
}

.av-nav.scrolled {
  background: rgba(14, 14, 20, 0.92);
  border-bottom-color: var(--av-surface-border);
}

.av-nav-inner {
  max-width: 72rem;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
}

.av-nav-logo {
  display: flex;
  align-items: center;
  gap: 0.625rem;
  text-decoration: none;
  color: var(--av-text);
  font-family: var(--av-font-mono);
  font-weight: 700;
  font-size: 1.05rem;
  letter-spacing: -0.02em;
}

.av-nav-links {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.av-nav-links > a {
  color: var(--av-text-muted);
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
  transition: color 0.15s;
}

.av-nav-links > a:hover {
  color: var(--av-text);
}

.av-nav-pill {
  all: unset;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  padding: 0.4rem 0.75rem;
  background: var(--av-surface);
  border: 1px solid var(--av-surface-border);
  border-radius: 6px;
  font-family: var(--av-font-mono);
  font-size: 0.75rem;
  color: var(--av-text-muted);
  transition: border-color 0.15s;
}

.av-nav-pill:hover {
  border-color: var(--av-indigo);
}

.av-nav-pill code {
  font-family: inherit;
}

/* Copy icon states */
.av-copy-icon {
  display: inline-flex;
  line-height: 1;
}

.av-copy-icon .av-check-icon {
  display: none;
}

.av-copied .av-copy-icon svg:first-child {
  display: none;
}

.av-copied .av-copy-icon .av-check-icon {
  display: inline;
  color: var(--av-green);
}

/* ============================================
   Hero Section
   ============================================ */
.av-hero {
  position: relative;
  padding: 8rem 2rem 5rem;
  overflow: hidden;
}

.av-hero-bg {
  position: absolute;
  inset: 0;
  background-image: radial-gradient(circle at 1px 1px, hsl(240, 5%, 18%) 1px, transparent 0);
  background-size: 32px 32px;
  opacity: 0.4;
  pointer-events: none;
}

.av-hero-inner {
  max-width: 72rem;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  position: relative;
}

.av-hero-label {
  display: inline-block;
  font-family: var(--av-font-mono);
  font-size: 0.875rem;
  color: var(--av-indigo);
  margin-bottom: 1.5rem;
  letter-spacing: 0.01em;
}

.av-hero-text h1 {
  font-family: var(--av-font-mono);
  font-size: clamp(2rem, 4vw, 3.25rem);
  font-weight: 700;
  line-height: 1.15;
  letter-spacing: -0.03em;
  color: var(--av-text);
  margin: 0 0 1.25rem;
}

.av-gradient-text {
  background: var(--av-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.av-hero-sub {
  font-size: 1.05rem;
  line-height: 1.7;
  color: var(--av-text-muted);
  margin: 0 0 2rem;
  max-width: 32rem;
}

.av-hero-cta {
  display: flex;
  gap: 0.875rem;
  flex-wrap: wrap;
}

.av-btn-primary {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.7rem 1.5rem;
  background: var(--av-gradient);
  color: hsl(185, 60%, 10%);
  border-radius: 6px;
  font-weight: 600;
  font-size: 0.9375rem;
  text-decoration: none;
  transition: box-shadow 0.2s, transform 0.15s;
  box-shadow: var(--av-glow);
}

.av-btn-primary:hover {
  box-shadow: var(--av-glow-strong);
  transform: translateY(-1px);
}

.av-btn-ghost {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.7rem 1.5rem;
  border: 1px solid var(--av-surface-border);
  color: var(--av-text-muted);
  border-radius: 6px;
  font-weight: 500;
  font-size: 0.9375rem;
  text-decoration: none;
  transition: border-color 0.15s, color 0.15s;
}

.av-btn-ghost:hover {
  border-color: var(--av-text-muted);
  color: var(--av-text);
}

/* ============================================
   Terminal Animation
   ============================================ */
.av-terminal {
  background: hsl(240, 10%, 6%);
  border: 1px solid var(--av-surface-border);
  border-radius: 8px;
  overflow: hidden;
  box-shadow: var(--av-glow);
  font-family: var(--av-font-mono);
  font-size: 0.8125rem;
  line-height: 1.7;
}

.av-terminal-bar {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 0.625rem 1rem;
  background: hsl(240, 8%, 10%);
  border-bottom: 1px solid var(--av-surface-border);
}

.av-terminal-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.av-dot-red { background: #ff5f57; }
.av-dot-yellow { background: #febc2e; }
.av-dot-green { background: #28c840; }

.av-terminal-title {
  margin-left: auto;
  font-size: 0.6875rem;
  color: var(--av-text-muted);
  letter-spacing: 0.02em;
}

.av-terminal-body {
  padding: 1rem 1.25rem;
  min-height: 12rem;
  position: relative;
}

.av-prompt {
  color: var(--av-indigo);
  font-weight: 600;
}

.av-dim { color: var(--av-text-muted); }
.av-pass { color: var(--av-green); font-weight: 600; }
.av-fail { color: var(--av-red); font-weight: 600; }

/* Scene visibility and cycling */
.av-scene {
  position: absolute;
  inset: 1rem 1.25rem;
  opacity: 0;
  animation: av-scene-cycle 24s infinite;
}

.av-scene-2 {
  animation-delay: 12s;
}

@keyframes av-scene-cycle {
  0% { opacity: 0; }
  2% { opacity: 1; }
  46% { opacity: 1; }
  50% { opacity: 0; }
  100% { opacity: 0; }
}

/* Typing animation for command lines */
.av-line-cmd .av-typing {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  width: 0;
  animation: av-type 1.2s steps(40, end) forwards;
}

.av-scene-1 .av-line-cmd .av-typing {
  animation-delay: 0.5s;
}

.av-scene-2 .av-line-cmd .av-typing {
  animation-delay: 12.5s;
}

@keyframes av-type {
  from { width: 0; }
  to { width: 100%; }
}

/* Output lines fade in with stagger */
.av-line-out {
  opacity: 0;
  animation: av-line-in 0.3s ease forwards;
}

