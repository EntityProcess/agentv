{
  "name": "@agentv/workspace",
  "version": "0.0.0",
  "private": true,
  "description": "AgentV monorepo workspace",
  "packageManager": "bun@1.3.3",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "bun --filter @agentv/core build && bun --filter @agentv/eval build && bun --filter agentv build",
    "verify": "bun run build && bun run typecheck && bun run lint && bun run test",
    "typecheck": "bun --filter @agentv/core typecheck && bun --filter agentv typecheck",
    "typecheck:workspace": "tsc -b tsconfig.build.json",
    "typecheck:watch": "bun --filter @agentv/core typecheck -- --watch & bun --filter agentv typecheck -- --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "fix": "biome check --write .",
    "test": "bun --filter @agentv/core test && bun --filter @agentv/eval test && bun --filter agentv test",
    "test:watch": "bun --filter @agentv/core test:watch & bun --filter agentv test:watch",
    "dev": "bun --filter agentv dev",
    "agentv": "bun apps/cli/dist/cli.js",
    "agentv:buildrun": "bun run build && bun apps/cli/dist/cli.js",
    "eval:baseline-check": "bun scripts/check-eval-baselines.ts",
    "changeset": "changeset",
    "version": "changeset version",
    "subagent:link": "bun scripts/link-subagent.ts",
    "subagent:unlink": "bun scripts/unlink-subagent.ts",
    "examples:install": "bun scripts/install-examples.ts",
    "publish": "bun run build && cd packages/core && bun publish --access public && cd ../eval && bun publish --access public && cd ../../apps/cli && bun publish --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/node": "24.1.0",
    "async-mutex": "^0.5.0",
    "p-limit": "^6.1.0",
    "tsup": "8.3.5",
    "typescript": "5.8.3",
    "yaml": "^2.6.1"
  },
  "dependencies": {
    "subagent": "^0.5.6"
  }
}
